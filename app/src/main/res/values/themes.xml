<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipePro" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:toolbarStyle">@style/UbuntuToolbarFontStyle</item>
        <item name="shapeAppearanceLargeComponent">@style/BottomSheetShapeOverride</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
    <style name="UbuntuToolbarFontStyle" parent="android:Widget.Material.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TextH5" parent="Theme.RecipePro">
        <item name="android:textSize">18sp</item>
        <item name="color">@color/white</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextH6" parent="Theme.RecipePro">
        <item name="android:textSize">16sp</item>
        <item name="color">@color/white</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="BottomSheetShapeOverride" parent="">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>